<%= render 'partials/header', :locals => {:page => "/matches/new"} %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form method="POST" action="/matches">
                <%= flash[:match_errors] %>
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
                <div class="form-group">
                    Date of the Rekt-oning: <select name="match[date_year]">
                        <% year = Date.today.year; while( year >= 2016 ) %>
                            <option value="<%= year %>"><%= year %></option>
                            <% year=year-1 %>
                        <% end %>
                    </select>
                    <select name="match[date_month]">
                        <option value="1">January</option>
                        <option value="2">February</option>
                        <option value="3">March</option>
                        <option value="4">April</option>
                        <option value="5">May</option>
                        <option value="6">June</option>
                        <option value="7">July</option>
                        <option value="8">August</option>
                        <option value="9">September</option>
                        <option value="10">October</option>
                        <option value="11">November</option>
                        <option value="12">December</option>
                    </select>
                    <select name="match[date_day]">
                        <% day = 1; while( day <= 31 ) %>
                            <option value="<%= day %>"><%= day %></option>
                            <% day=day+1 %>
                        <% end %>
                    </select>
                </div>
                <div class="form-group">
                    Winner: <%= collection_select(:match, :winner_id, @players, :id, :real_name) %>
                </div>
                <div class="form-group">
                    Loser: <%= collection_select(:match, :loser_id, @players, :id, :real_name) %>
                </div>
                <input type="submit" value="Save">
            </form>
        </div>
    </div>
</div>
